{
  "name": "applaud",
  "version": "1.0.0",
  "description": "Tech9 Applaud",
  "main": "build/index.js",
  "private": true,
  "scripts": {
    "build": "shx rm -rf build/ && run-p build:**",
    "build:ts": "tsc -p tsconfig.json",
    "build:graphql": "cpx \"src/graphql/**/*.graphql\" build/graphql",
    "build:migrations": "cpx \"src/migrations/*.js\" build/migrations",
    "build:emails": "mkdir -p build/services/email/templates && npx mjml src/services/email/templates/*.mjml -o build/services/email/templates",
    "clean": "shx rm -rf build",
    "migrate": "PROCESS=migrate env-cmd node build/index.js",
    "precommit": "lint-staged",
    "rebuild-db": "docker-compose stop mysql && rm -rf ./.data/mysql && docker-compose up -d mysql",
    "repl": "PROCESS=repl env-cmd node build/index.js",
    "start": "run-p start:**",
    "start:api": "PROCESS=api PORT=4000 env-cmd node build/index.js",
    "start:worker": "PROCESS=worker env-cmd node build/index.js",
    "serverless:offline": "PROCESS=api env-cmd npx serverless offline -s local",
    "watch": "shx rm -rf build/ && run-p watch:**",
    "watch:ts": "tsc -w -p tsconfig.json",
    "watch:emails": "mkdir -p build/services/email/templates && npx mjml -w src/services/email/templates/*.mjml -o build/services/email/templates",
    "watch:graphql": "cpx -w \"src/graphql/**/*.graphql\" build/graphql"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mehulcse/applaud.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://github.com/mehulcse/applaud/blob/master/README.md",
  "dependencies": {
    "@bugsnag/js": "^6.4.1",
    "@bugsnag/plugin-express": "^6.4.1",
    "apollo-server-express": "^2.10.1",
    "apollo-server-lambda": "^2.10.1",
    "apollo-server-plugin-base": "^0.6.10",
    "aws-lambda": "^1.0.5",
    "aws-sdk": "^2.622.0",
    "axios": "^0.19.2",
    "cookie-parser": "^1.4.4",
    "copy-webpack-plugin": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "google-auth-library": "^4.2.2",
    "graphql": "^14.3.1",
    "graphql-import": "^0.7.1",
    "graphql-iso-date": "^3.6.1",
    "handlebars": "^4.4.5",
    "helmet": "^3.21.2",
    "html-to-text": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.5",
    "lodash": "^4.17.14",
    "log4js": "^4.3.1",
    "moment": "^2.24.0",
    "mysql": "^2.17.1",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.3.0",
    "objection": "^1.6.9",
    "preview-email": "^1.0.1",
    "serverless-http": "^2.3.0",
    "serverless-sequelize-migrations": "^1.0.5",
    "source-map-support": "^0.5.12",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.27",
    "@types/cookie-parser": "^1.4.1",
    "@types/graphql": "^14.2.0",
    "@types/graphql-iso-date": "^3.3.1",
    "@types/helmet": "0.0.43",
    "@types/html-to-text": "^1.4.31",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.136",
    "@types/node": "^12.0.8",
    "@types/nodemailer": "^6.2.1",
    "@types/ws": "^6.0.1",
    "@types/yup": "^0.26.18",
    "cpx": "^1.5.0",
    "env-cmd": "^9.0.3",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.5",
    "mjml": "^4.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "serverless": "^1.59.0",
    "serverless-domain-manager": "^3.3.0",
    "serverless-dotenv-plugin": "^2.1.1",
    "serverless-offline": "^5.12.1",
    "serverless-webpack": "^5.3.1",
    "shx": "^0.3.2",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.3",
    "webpack": "^4.41.2",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add",
      "npx tslint --fix --project tsconfig.json --config tslint.json"
    ]
  }
}
